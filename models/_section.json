{
  "definitions": [
    {
      "title": "Section",
      "id": "section",
      "plugins": {
        "xwalk": {
          "page": {
            "resourceType": "core/franklin/components/section/v1/section",
            "template": {
              "model": "section"
            }
          }
        }
      }
    }
  ],
  "models": [
    {
      "id": "section",
      "fields": [
        {
          "component": "multiselect",
          "name": "style",
          "label": "Style",
          "options": [
            {
              "name": "Highlight",
              "value": "highlight"
            }
          ]
        },
        {
          "component": "boolean",
          "name": "add-sidebar",
          "label": "Add sidebar",
          "value": false
        },
        {
          "component": "aem-content",
          "name": "sidebar-link",
          "label": "Side Bar Reference",
          "condition": {
            "===": [
              {
                "var": "add-sidebar"
              },
              true
            ]
          }
        },
        {
          "component": "boolean",
          "name": "sidebar-mobile-view",
          "label": "Mobile View",
          "value": false,
          "condition": {
            "===": [
              {
                "var": "add-sidebar"
              },
              true
            ]
          }
        },
        {
          "component": "select",
          "name": "sidebar-tablet-view",
          "label": "Tablet View",
          "value": "sidebar-hidden",
          "options": [
            {
              "name": "Do not show",
              "value": "sidebar-hidden"
            },
            {
              "name": "Show as Full Width",
              "value": "sidebar-tablet-full-width"
            },
            {
              "name": "Show as Sidebar",
              "value": "sidebar-tablet-view"
            }
          ],
          "condition": {
            "===": [
              {
                "var": "add-sidebar"
              },
              true
            ]
          }
        }
      ]
    }
  ],
  "filters": [
    {
      "id": "section",
      "components": [
        "text",
        "image",
        "button",
        "title",
        "hero",
        "cards",
        "columns",
        "fragment"
      ]
    }
  ]
}
